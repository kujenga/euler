// finds the starting point for the longest collatx sequence under a million

int collatzLength ( int n, int l )
{
  if ( n == 1 )
    return l;
  else if ( n%2 == 0 )
    return collatzLength(n/2,l+1);
  else 
    return collatzLength(3*n+1,l+1);
}

int main (int argc, char** argv)
{
  int cur = 0;
  int max = 0;
  for (int i = 1; i < 1000000; i++) {
    if ( collatzLength(i,0) > max )
      cur = i;
  }
  printf("longest: %i",cur);
}
